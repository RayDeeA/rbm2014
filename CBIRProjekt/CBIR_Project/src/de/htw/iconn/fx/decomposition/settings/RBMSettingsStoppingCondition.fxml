<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" fx:id="view" prefHeight="-1.0" prefWidth="-1.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="de.htw.iconn.fx.decomposition.settings.RBMSettingsStoppingConditionController">
  <children>
    <GridPane hgap="10.0" vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <children>
        <RadioButton fx:id="rdi_epochs" mnemonicParsing="false" onAction="#rdi_epochsAction" text="Epochs" GridPane.columnIndex="0" GridPane.rowIndex="0">
          <toggleGroup>
            <ToggleGroup fx:id="grp_stoppingCondition" />
          </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="rdi_error" mnemonicParsing="false" onAction="#rdi_errorAction" text="Error" toggleGroup="$grp_stoppingCondition" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txt_epochs" onKeyTyped="#txt_epochsKeyTyped" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField fx:id="txt_error" onKeyTyped="#txt_errorKeyTyped" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
    </GridPane>
  </children>
  <padding>
    <Insets />
  </padding>
</AnchorPane>
